@model SignUpModel
@{
    ViewData["Title"] = "SignUp";
}

<h3 style="font-weight:600">Please fill out all the fields in order to create a new account</h3>

@Html.ValidationSummary()
@TempData["message"]


@* method- get ieliek ievadito linka, metode post neparada sos datus *@
<form class="form-horizontal" action="SignUp" method="post">
    <div class="form-group">
        @* label for aktivize ievadlauku pec id vertibas *@
        <label for="newEmail">Email address</label><br />
        <input asp-for="Email" class="form-control" id="newEmail" style="width:150px" placeholder="Email" />
    </div>
    <div class="form-group">
        <label for="newPassword">Password</label>
        <input asp-for="Password" class="form-control" id="newPassword" placeholder="Password" style="width:150px">
    </div>
    <div class="form-group">
        <label for="repeatNewPassword">Repeat password</label>
        <input asp-for="PasswordRepeat" class="form-control" id="repeatNewPassword" placeholder="Repeat password" style="width:150px">
    </div>
